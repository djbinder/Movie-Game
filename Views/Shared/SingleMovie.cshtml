<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>




<body>
    <div class="sticky-top">
        <div class="row rounded-0 RedDarken-1 mb-1">
            <a class="col text-center text-white nav-link" href="/">Home</a>
        </div>
    </div>

    <br>

    <div class="row rounded-0 text-white">
        <span class="col text-center"><h4><b>@ViewBag.Movies.Title</b></h4></span>
        <span class="col text-center"><h4><b>@ViewBag.Movies.Year</b></h4></span>
    </div>

    <div class="row">

        <div class="col-sm-12 col-md-4 mb-5" style="padding: 0px;">
            <img src="@ViewBag.MoviePoster" class="rounded mx-auto d-block">
        </div>

        <div class="col ml-2 text-white">

            <div class="mb-4">
                <b>Genre </b><br>
                <span>@ViewBag.MovieGenre</span>
            </div>

            <div class="mb-4">
                <b>Actors </b><br>
                <span>@ViewBag.Actors</span>
            </div>

            <div class="mb-4">
                <b>Director </b><br>
                <span>@ViewBag.MovieDirector</span>
            </div>

            <div class="mb-4">
                <b>Writer(s) </b><br>
                <span>@ViewBag.MovieWriter</span>
            </div>

        </div>

        <div class="col mr-2 text-center text-white">
            <b>Clues</b>
            <ul class="list-group clueText">
                @foreach (var Clue in ViewBag.Movies.Clues)
                {
                    <li class="list-group-item text-center bg-light mb-2 py-2 rounded-0">@Clue.ClueText</li>
                }
            </ul>
        </div>

    </div>
</body>