                        <div id="movieDetail"></div>

                    </div>

                </div>

                <br>

                <a href="#"><button class="btn btn-info" id="guessButton">Click to Guess</button></a>
            </form>

            <br>



            <!-- <div id="searchres"></div> -->



        </div>

    </div>

    <br>
    <hr class="linebreak3">

    <div class="row">

        <div id="clueSection" class="col">
            <h4>List of Clues</h4>

                <a href="#"><button class="btn btn-danger" id="getClue">Get Next Clue</button></a>
                <a href="/clear"><button class="btn btn-warning">Start Over</button></a>

