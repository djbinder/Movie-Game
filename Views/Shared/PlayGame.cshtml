@model movieGame.Models.Movie

@{
    Layout = "_Layout";
}


<p>
    <b>Movied ID: </b> @ViewBag.SessionMovieId_testing   |
    <b>Movie Title: </b> @ViewBag.SessionMovieTitle_testing |
    <b>Current Player Name: </b> @ViewBag.PlayerName
</p>

<br>
<table class="bg-pan-right">
    <tr>
        <td class="MovieGameHeaderTable"><h1><b>Movie Game</b></h1></td>
        <td class="HeaderLinks"><a href="/">Home</a></td>
        <td class="HeaderLinks"><a href="/clear">Start Over</a></td>
    </tr>
</table>
<hr class="linebreak2">

<div class="container-fluid">

    <div class="row">

        <div id="movieGuessSection" class="col-12" style="border: 1px solid black">
            <h4>Guess Movie</h4>

            <ul id="JQresponse">

            </ul>

