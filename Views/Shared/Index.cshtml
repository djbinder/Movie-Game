@{
    Layout = "_Layout";
}


<body>
    <div class="background">

        <div id="posters">

            @foreach(var poster in @ViewBag.TopMoviePosters)
            {
                <img src="https://image.tmdb.org/t/p/w200/@poster" alt="MOVIE POSTER" />
            }
        </div>

        <div id="indexcontent" class="container-fluid">
            <br>

            <table id="adminLinks">
                <tr>
                    <td class="HeaderLinks"><a href="allmovies">All Movies </a></td>
                    <td class="HeaderLinks"><a href="/test">Test Page </a></td>
                    <td class="HeaderLinks"><a href="addMoviePage"> Admin Page</a></td>
                </tr>
            </table>

            <div id="topHeader">
                <h1 class="MovieGameTitle"><b>#CDawgs Awesome Movie Game</b></h1>
            </div>

            <br><br>


            <div id="EnterNameBox">
                <form action="EnterName" method="POST" class="enterNameForm">
                    <table>
                        <tr>
                            <td><b>Enter Your Name</b></td>
                            <td><input class="form-control" name="NameEntered" type="text"></td>
                        </tr>
                    </table>
                    <br><br>

                    <button class="btn btn-primary">Click to Start Game</button>
                </form>
            </div>

            <br><br><br>

            <div id="LeaderboardSection">
                <table class="leaderboard">
                    <tr>
                        <th>Rank</th>
                        <th>Player</th>
                        <th>Total Points</th>
                        <th>Games Played</th>
                        <th>Pts. Per Game</th>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Michael Scott</td>
                        <td>100</td>
                        <td>10</td>
                        <td>10</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Dwight Shrute</td>
                        <td>70</td>
                        <td>10</td>
                        <td>7</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>etc.</td>
                        <td>etc.</td>
                        <td>etc.</td>
                        <td>etc.</td>
                    </tr>
                </table>
            </div>
        </div>

    </div>

</body>