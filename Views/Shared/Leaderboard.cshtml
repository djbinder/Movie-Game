<head>
    <link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">

    <link rel="stylesheet"
    href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
    asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
</head>


<body>
    <div class="sticky-top mb-5">
        <div class="row rounded-0 RedDarken-1 mb-1">
            <a class="col text-center text-white nav-link" href="/">Home</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 col-sm-12">
            <table class="table table-sm leaderboard">
                <tr class="glow">
                    <td colspan="5">Full Leaderboard</td>
                </tr>
                <tr class="text-white">
                    <th class="text-center">Rank</th>
                    <th class="text-left">Player</th>
                    <th class="text-center">Total Points</th>
                    <th class="text-center">Games Played</th>
                    <th class="text-center">Games Won</th>
                </tr>
                @{ var counter = 0; foreach(var Player in ViewBag.Leaders) {
                <tr class="text-white">
                    <td class="text-center">@(++counter)</td>
                    <td class="text-left text-primary">@Player.PlayerName</td>
                    <td class="text-center">@Player.Points</td>
                    <td class="text-center">@Player.GamesAttempted</td>
                    <td class="text-center">@Player.GamesWon</td>
                </tr>
                } }
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</body>